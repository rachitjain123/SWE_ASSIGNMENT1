<?xml version="1.0" encoding="UTF-8"?>
<project name="module_swe" default="compile.module.swe">
  <dirname property="module.swe.basedir" file="${ant.file.module_swe}"/>
  
  <property name="module.jdk.home.swe" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.swe" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.swe" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.swe" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="swe.output.dir" value="${module.swe.basedir}/out/production/swe"/>
  <property name="swe.testoutput.dir" value="${module.swe.basedir}/out/test/swe"/>
  
  <path id="swe.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="swe.module.production.classpath">
    <path refid="${module.jdk.classpath.swe}"/>
  </path>
  
  <path id="swe.runtime.production.module.classpath">
    <pathelement location="${swe.output.dir}"/>
  </path>
  
  <path id="swe.module.classpath">
    <path refid="${module.jdk.classpath.swe}"/>
    <pathelement location="${swe.output.dir}"/>
  </path>
  
  <path id="swe.runtime.module.classpath">
    <pathelement location="${swe.testoutput.dir}"/>
    <pathelement location="${swe.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.swe">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.swe">
    <patternset refid="excluded.from.module.swe"/>
  </patternset>
  
  <path id="swe.module.sourcepath">
    <dirset dir="${module.swe.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.swe" depends="compile.module.swe.production,compile.module.swe.tests" description="Compile module swe"/>
  
  <target name="compile.module.swe.production" depends="register.custom.compilers" description="Compile module swe; production classes">
    <mkdir dir="${swe.output.dir}"/>
    <javac2 destdir="${swe.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.swe}/javac">
      <compilerarg line="${compiler.args.swe}"/>
      <bootclasspath refid="swe.module.bootclasspath"/>
      <classpath refid="swe.module.production.classpath"/>
      <src refid="swe.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.swe"/>
    </javac2>
    
    <copy todir="${swe.output.dir}">
      <fileset dir="${module.swe.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.swe.tests" depends="register.custom.compilers,compile.module.swe.production" description="compile module swe; test classes" unless="skip.tests"/>
  
  <target name="clean.module.swe" description="cleanup module">
    <delete dir="${swe.output.dir}"/>
    <delete dir="${swe.testoutput.dir}"/>
  </target>
</project>